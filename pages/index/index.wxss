/**index.wxss**/
.container{
  padding: 0;
  margin: 0;
}
.slide-image{
  height: 150px;
  width: 100%;
}
.section-search{
  height: 65rpx;
  background-color: #f3f3f3;
  border-radius: 65rpx;
  width: 92%;
  margin: 25rpx auto;
}
.search-book{
  display: inline-block;
  height: 65rpx;
  line-height: 65rpx;
  width: 85%;
}
.search-icon{
  width: 65rpx;
  height: 65rpx;
  vertical-align:top;
  text-align: center;
  line-height: 48px;
}
.fiction-division{
  width: 100%;
  height: 10rpx;
  background-color: rgba(195, 195, 195, 0.3);
  box-shadow: 2rpx 0 3rpx #515151;
}
.fiction-item{
  padding-top: 20rpx;
}
.fiction-male{
  margin-left: 3%;
  font-size: 30rpx;
}
.flex-wrp-vertical{
  flex-direction: column;
}
.flex-item-vertical{
  margin-top: 20rpx;
}
.fiction-picture{
  height: 180rpx;
  width: 18%;
  margin: 0 3% 0 3%;
  display: inline-block;
  vertical-align: middle;
}
.fiction-content-right{
  display: inline-block;
  vertical-align: middle;
  width: 76%;
  height: 180rpx;
  overflow: hidden;
}
.right-name{
  display: inline-block;
  font-size: 26rpx;
}
.fiction-introduce{
  font-size: 24rpx;
  word-wrap: break-word;
  color: #717171;
  height: 100rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.author-name{
  float: left;
  font-size: 26rpx;
  color: #515151;
}
.numberof{
  float: left;
  padding:0 4rpx 0 16rpx;
  font-size: 26rpx;
  color: red;
}
.recommend-num{
  float: left;
  font-size: 26rpx;
  color: #515151;
}
.level{
  margin: 16rpx auto;
  width:94%;
  height:2rpx;
  background-color:gray;
}
.see-more{
  font-size: 26rpx;
  color: red;
  text-align: center;
  font-weight: 300;
  padding-bottom: 16rpx;
}